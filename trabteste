#include <stdio.h>



typedef struct{
    double numerador;
    double denominador;
} Fraction;

Fraction setFraction(){
    Fraction frac;
    printf("Digite o numerador: ");
    scanf("%lf", &frac.numerador);
    printf("Digite o denominador: ");
    scanf("%lf", &frac.denominador);
    return frac;
}


Fraction mulFraction(Fraction frac1, Fraction frac2){
    Fraction fracResult;
    fracResult.numerador = (frac1.numerador/frac2.denominador);
    fracResult.denominador = (frac1.denominador/frac2.numerador);
    return fracResult;
}

int main(void){
    
    Fraction frac1, frac2, FRACAO;
    double resultado;
    
    printf("Fração 1: ");
    frac1 = setFraction();
    printf("Fração 2: ");
    frac2 = setFraction();
    
    FRACAO = mulFraction(frac1, frac2);
    printf("%.2lf\n", FRACAO.numerador);
    printf("%.2lf\n", FRACAO.denominador);
    
    resultado = FRACAO.numerador / FRACAO.denominador;
    printf("%.2lf\n", resultado);
}

